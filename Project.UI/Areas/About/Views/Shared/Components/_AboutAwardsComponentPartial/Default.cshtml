@using Project.Shared.DTOs.AwardDtos
@model List<ResultAwardDto>

<section class="ftco-section testimony-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Ödüller</span>
                <h2 class="mb-3">Kazandığımız Ödüller</h2>
            </div>
        </div>
        <div class="row ftco-animate">
            <div class="col-md-12">
                <div class="carousel-testimony owl-carousel ftco-owl">

                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="testimony-wrap rounded text-center py-4 pb-5">
                                <div class="user-img mb-2" style="background-image: url('@Url.Content($"{@item.AwardPhotoUrl}")');">
                                </div>
                                <div class="text pt-4">
                                    <p class="mb-4">@item.AwardDescription</p>
                                    <p class="name">@item.AwardName</p>
                                    <span class="position">@item.AwardOrganization</span>
                                    <br />
                                    <span class="position">@item.AwardDate.ToString("dd-MM-yyyy")</span>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>