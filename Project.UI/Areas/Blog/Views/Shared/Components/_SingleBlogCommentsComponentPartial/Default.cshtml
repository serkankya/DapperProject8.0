@using Project.Shared.DTOs.CommentDtos
@model List<ResultCommentDto>

<div class="pt-5 mt-5">
	<h3 class="mb-5">@Model.Count Yorum</h3>
	<ul class="comment-list">

		@foreach (var item in Model)
		{
			<li class="comment">
				<div class="vcard bio">
					<img src="@Url.Content(item.ImageUrl)" alt="Image placeholder">
				</div>
				<div class="comment-body">
					<h3>@item.UserName</h3>
					<div class="meta">@item.CommentDate.ToString("dd/MMM/yyyy HH:mm")</div>
					<p>@item.Comment</p>
				</div>
			</li>
		}

	</ul>
</div>
