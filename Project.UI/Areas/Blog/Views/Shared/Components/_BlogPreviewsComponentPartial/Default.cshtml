@using Project.Shared.DTOs.BlogDtos
@model List<ResultBlogDto>

<section class="ftco-section">
	<div class="container">
		<div class="row d-flex justify-content-center">

			@foreach (var item in Model)
			{
				<div class="col-md-12 text-center d-flex ftco-animate">
					<div class="blog-entry justify-content-end mb-md-5">
						<a href="blog-single.html" class="block-20 img" style="background-image: url('@Url.Content(@item.ImageUrl)');">
						</a>
						<div class="text px-md-5 pt-4">
							<div class="meta mb-3">
								<div><a href="#">@item.PostDate.ToString("dd  MMM  yyyy  HH:mm")</a></div>
								<div><a href="#">UserName</a></div>
								<div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
							</div>
							<h3 class="heading mt-2"><a href="#">@item.PreTitle</a></h3>
							<p>@item.PreDescription</p>
							<p><a href="@Url.Action("SingleBlog","Blog", new {id = item.BlogId})" class="btn btn-primary">Oku <span class="icon-long-arrow-right"></span></a></p>
						</div>
					</div>
				</div>
			}

		</div>
	</div>
</section>